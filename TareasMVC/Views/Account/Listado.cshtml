@model UsuariosListadoViewModel

@{
    ViewData["Title"] = "Listado de usuarios ";
    Layout = "../shared/_layout";
}

<h1>Lista de usuarios</h1>

@if (Model.Mensaje is not null)
{
    <div class="alert alert-success " role="alert">
        @Model.Mensaje

    </div>
}
@if (Model.Usuarios is not null)

{
    <form method="post">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>Acciones</td>
                        <td>Email</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuarios in Model.Usuarios)
                    {
                        <tr>
                            <td>
                                <button class="btn btn-primary me-2"
                            asp-action="HacerAdmin" asp-route-email="@usuarios.Email">
                                    Hacer Admin
                                </button>

                                <button class="btn btn-secondary me-2"
                            asp-action="RemoverAdmin" asp-route-email="@usuarios.Email">
                                    Remover Admin
                                </button>
                            </td>
                            <td>
                                @usuarios.Email
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
}


else
        {
            <p>No hay datos para mostrar </p>
        }
     